{
  "name": "redux-universal-starter",
  "version": "0.1.0",
  "description": "Simple babel boilerplate with crucial and up-to-date dependencies",
  "scripts": {
    "clean-dist": "rimraf dist",
    "copy-files": "cpy src/index.html dist",
    "clean-and-copy": "npm run clean-dist && npm run copy-files",
    "prestart": "npm run clean-dist",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "babel-node ./src/server.js",
    "start:prod": "npm run build && node ./dist/server.js",
    "prebuild": "npm run clean-dist",
    "build:client": "webpack --env.prod",
    "build:server": "webpack --env.prod -p --config webpack.server.config.js",
    "build": "npm run build:client && npm run build:server",
    "test": "mocha --recursive --compilers js:babel-register",
    "lint": "standard"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "cpy-cli": "^1.0.1",
    "css-loader": "^0.23.1",
    "eventsource-polyfill": "^0.9.6",
    "if-env": "^1.0.0",
    "koa-webpack-middleware": "^1.0.1",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "sinon": "^1.17.4",
    "standard": "^7.1.2",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.14",
    "webpack-dev-server": "^1.14.1"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "koa": "^2.0.0",
    "koa-router": "^7.0.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "serialize-javascript": "^1.3.0"
  }
}
